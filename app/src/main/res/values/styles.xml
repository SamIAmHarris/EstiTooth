<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/fab_fill</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fab_fill</item>
        <item name="colorPrimaryDark">@color/fab_fill</item>
        <item name="colorAccent">@color/fab_fill</item>
    </style>

    <style name="StepTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@color/fab_fill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="InstructionsTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/cookie_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="IngredientTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="EnterTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
