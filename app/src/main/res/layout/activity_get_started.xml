<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/images_layout"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/bear"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_marginTop="90dp"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/oven_image"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="240dp" />

        <ImageView
            android:id="@+id/book"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_width="80dp"
            android:layout_height="100dp" />


    </RelativeLayout>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_below="@+id/images_layout"
        android:id="@+id/toys_ready_text"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Your toy\'s are ready."
        android:letterSpacing="0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/toys_ready_text"
        android:id="@+id/are_you_text"
        android:text="Are you?"
        android:layout_marginTop="6dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:letterSpacing="0.05"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/get_started_toy_button"
        android:background="@drawable/blue_button"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:elevation="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="Yes - let\'s get started!"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="72dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>