<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/step_one_text_view"
        android:text="STEP 1"
        style="@style/StepTextViewStyle"/>

    <TextView
        android:id="@+id/gather_ingredients_text_view"
        android:layout_below="@+id/step_one_text_view"
        android:text="Gather the ingredients\nand check them off your list:"
        style="@style/InstructionsTextViewStyle" />

    <LinearLayout
        android:id="@+id/lets_bake_text_view"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/cookie_dough_relative"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/unchecked_list_background"
                android:layout_width="300dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/cookie_dough_text"
                    android:text="Cookie Dough"
                    style="@style/IngredientTextViewStyle"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="12dp"
                android:elevation="4dp"
                android:background="@drawable/circle_checkbox"
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/cookie_dough_check"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerInParent="true"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/choco_chips_relative"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/unchecked_list_background"
                android:layout_width="300dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/choco_chips_text"
                    android:text="Chocolate Chips"
                    style="@style/IngredientTextViewStyle"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="12dp"
                android:elevation="4dp"
                android:background="@drawable/circle_checkbox"
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/choco_chips_check"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerInParent="true"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/baking_pan_relative"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/unchecked_list_background"
                android:layout_width="300dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/baking_pan_text"
                    android:text="Baking Pan"
                    style="@style/IngredientTextViewStyle"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="12dp"
                android:elevation="4dp"
                android:background="@drawable/circle_checkbox"
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/baking_pan_check"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerInParent="true"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/continue_ingredients_fab"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="56dp"
        android:background="@drawable/ripple_oval"
        android:elevation="8dp"
        android:src="@drawable/ic_nav_right_arrow" />



</RelativeLayout>