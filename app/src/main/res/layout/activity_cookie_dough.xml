<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/good_job_text_view"
        android:text="STEP TWO"
        style="@style/StepTextViewStyle"/>

    <TextView
        android:id="@+id/gather_ingredients_text_view"
        android:layout_below="@+id/good_job_text_view"
        android:text="Now place the cookies in the oven!"
        style="@style/InstructionsTextViewStyle"/>


    <RelativeLayout
        android:background="@drawable/cookie_tray"
        android:layout_centerInParent="true"
        android:layout_width="340dp"
        android:layout_height="210dp"/>

    <RelativeLayout
        android:id="@+id/lets_bake_text_view"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cookie_1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:visibility="invisible"
                android:src="@drawable/cookie_1_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp" />

            <ImageView
                android:id="@+id/cookie_2"
                android:visibility="invisible"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/cookie_1_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp" />

            <ImageView
                android:id="@+id/cookie_3"
                android:visibility="visible"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/cookie_1_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cookie_4"
                android:visibility="invisible"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/cookie_1_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp" />

            <ImageView
                android:id="@+id/cookie_5"
                android:visibility="invisible"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/cookie_1_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp" />

            <ImageView
                android:id="@+id/cookie_6"
                android:visibility="invisible"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/cookie_1_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp" />

        </LinearLayout>

    </RelativeLayout>


    <ImageButton
        android:id="@+id/continue_cookie_fab"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="56dp"
        android:background="@drawable/ripple_oval"
        android:elevation="8dp"
        android:src="@drawable/ic_nav_right_arrow" />


    <ImageView
        android:id="@+id/checkmark"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp"
        android:elevation="8dp"
        android:tint="@android:color/white"
        android:src="@drawable/check_mark" />


</RelativeLayout>