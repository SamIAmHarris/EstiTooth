<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/good_job_text_view"
        android:text="GOOD JOB"
        style="@style/StepTextViewStyle"/>

    <TextView
        android:id="@+id/gather_ingredients_text_view"
        android:layout_below="@+id/good_job_text_view"
        android:text="Now place the cookie dough\non the pan, top each cookie\nwith Chocolate Chips!"
        style="@style/InstructionsTextViewStyle"/>

    <RelativeLayout
        android:id="@+id/lets_bake_text_view"
        android:background="@drawable/cookie_tray"
        android:layout_centerInParent="true"
        android:layout_width="320dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/cookies_together_all"
            android:layout_centerInParent="true"
            android:layout_width="260dp"
            android:layout_height="180dp" />


    </RelativeLayout>


    <ImageButton
        android:id="@+id/continue_cookie_fab"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="56dp"
        android:background="@drawable/ripple_oval"
        android:elevation="8dp"
        android:src="@drawable/ic_nav_right_arrow" />


</RelativeLayout>