<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cookies_milk_image_view"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/entered_text_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="200dp"
        android:layout_height="140dp" />

    <LinearLayout
        android:id="@+id/entered_text_layout"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lets_bake_text_view"
            android:layout_gravity="center"
            android:text="Lets bake cookies"
            style="@style/EnterTextViewStyle"/>


        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/together_text_view"
                android:text="together! Press"
                style="@style/EnterTextViewStyle"/>

            <ImageView
                android:layout_toRightOf="@+id/together_text_view"
                android:src="@drawable/nav_small_content_play"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/below_text_view"
            android:layout_gravity="center"
            android:text="below to get started!"
            style="@style/EnterTextViewStyle"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/play_fab"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="56dp"
        android:background="@drawable/ripple_oval"
        android:elevation="8dp"
        android:src="@drawable/ic_nav_play" />

</RelativeLayout>