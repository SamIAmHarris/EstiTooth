<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/search"
            android:id="@+id/searching_image_view"
            android:layout_width="wrap_content"
            android:layout_height="120dp" />

        <TextView
            android:layout_below="@+id/searching_image_view"
            android:id="@+id/searching_text_view"
            android:text="Searching..."
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_below="@+id/searching_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/searching_text_view"
            android:layout_alignRight="@+id/searching_text_view"
            android:layout_width="wrap_content"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>